@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex align-items-center ms-3" style="gap: 10px;"> 
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="nav-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Quản lý tài khoản">
            <i class="fas fa-user-circle text-primary fs-5 me-1"></i> 
            <span class="fw-bold">@User.Identity?.Name</span>
        </a>

        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-item btn-logout border-0 bg-transparent">
                <i class="fas fa-sign-out-alt text-danger me-1"></i> Thoát
            </button>
        </form>
    }
    else
    {
        <a class="nav-item" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user-plus me-1"></i> Đăng ký
        </a>

        <a class="nav-item fw-bold text-primary" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
        </a>
    }
</div>